<%- include('partials/header') -%>
<h3 id="searchHeading">Search Result <span style="color: grey;">> </span><%= data["title"].toUpperCase() %></h3>

    <div class="card mb-5 w-75">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="<%= data["imgUrl"]%>" class="card-img img-fluid">
            </div>

            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title"><b><%= data["title"]%></b> <%= data["releaseDate"]%></h2>
                    <hr>
                    <h4 class="mb-2">Overview:</h4>
                    <p class="card-text"><%= data["overview"]%></p>

                    <hr>
                    <p class="card-text"><b>User Score:</b> <%= data["userScore"]%>% </p>
                    <hr>
                    <h4 class="mb-3">Featured Crew:</h4>

                    <% data["crew"].forEach((crew)=> { %>
                        <p class="ml-2"><b><%= crew.name %></b> (<%= crew.role %>),</p>
                    <% }); %>    
                </div>
            </div>

        </div>
    </div>


<%- include('partials/footer') -%>